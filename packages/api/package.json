{
  "name": "api",
  "version": "0.0.0",
  "description": "Api repo for the music port app",
  "author": "Anifowoshe Gbenga <daveanifowoshe@ymail.com>",
  "homepage": "",
  "license": "ISC",
  "main": "src/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "export $(cat .dev.env) && concurrently --kill-others 'yarn dev:server'",
    "dev:server": "nodemon --watch src --ext 'js json ts' -r ts-node/register/transpile-only src/server",
    "prod": "export $(cat .prod.env) && node dist/server.js",
    "format": "yarn prettier --write .",
    "format:check": "yarn prettier --check .",
    "test": "jest --passWithNoTests",
    "graphql:typegen": "graphql-codegen --config ./codegen.ts"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "concurrently": "^7.4.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "graphql": "16.6.0",
    "graphql-request": "4.0.0",
    "mongodb": "^5.1.0",
    "mongoose": "^6.6.1",
    "nanoid": "3.3.1",
    "nexus": "^1.3.0",
    "nodemon": "^2.0.20",
    "p-defer": "3.0.0",
    "passport": "^0.6.0",
    "passport-deezer": "^0.2.0",
    "passport-spotify": "^2.0.0",
    "passport-youtube-v3": "^2.1.0",
    "ts-node": "^10.9.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/typescript": "^3.0.2",
    "@graphql-codegen/typescript-graphql-request": "^4.5.8",
    "@graphql-codegen/typescript-operations": "^3.0.2",
    "@graphql-codegen/typescript-resolvers": "^3.1.1",
    "@jest/globals": "29.4.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.18",
    "@types/passport": "^1.0.11",
    "@types/passport-spotify": "^2.0.1",
    "jest": "29.4.3",
    "prettier": "^2.7.1",
    "ts-jest": "29.0.5",
    "typescript": "^4.8.3"
  }
}
